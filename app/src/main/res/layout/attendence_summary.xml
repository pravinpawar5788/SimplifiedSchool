<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inner_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearlayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Start Date"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/submissionDate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/EditText_height"
                android:editable="false"
                android:ems="10"
                android:background="@drawable/edit_text_bg"
                android:textSize="@dimen/font_size" >
            </EditText>

            <ImageView
                android:id="@+id/calender"
                android:layout_width="@dimen/EditText_height"
                android:layout_height="@dimen/EditText_height"
                android:contentDescription="@string/Calender"
                android:src="@drawable/calender_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textendDate"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="End Date"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/endDate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/EditText_height"
                android:editable="false"
                android:ems="10"
                android:background="@drawable/edit_text_bg"
                android:textSize="@dimen/font_size" >
            </EditText>

            <ImageView
                android:id="@+id/calender1"
                android:layout_width="@dimen/EditText_height"
                android:layout_height="@dimen/EditText_height"
                android:contentDescription="@string/Calender"
                android:src="@drawable/calender_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
             >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/Select_ClassTxt"
                android:textSize="@dimen/font_size" />

            <Spinner
                android:id="@+id/spinnerClass"
                style="@style/Animation.AppCompat.Dialog"
                android:layout_width="@dimen/Spinner_Width"
                android:layout_height="@dimen/Spinner_Height"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/attendencedetails"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Button_height"
                android:background="@drawable/positive_buttons"
                android:text="Get Attendance Details"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/listheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#68C78F"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Roll.No"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Name"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Attendence"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/div"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Remarks"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:scrollbars="vertical" >

            <ListView
                android:id="@+id/attendenceList1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>